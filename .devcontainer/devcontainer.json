{
  "name": "Flutter Codespace (via Dockerfile)",
  "build": {
    "dockerfile": "Dockerfile" // Verweis auf Ihr Dockerfile im .devcontainer Ordner
    // "context": "." // Stellt sicher, dass der Kontext das .devcontainer-Verzeichnis ist
  },
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "App Port",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.codespaces",
        "GitHub.vscode-pull-request-github",
        "dart-code.dart-code",
        "dart-code.flutter"
      ]
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "flutter doctor -v"
}